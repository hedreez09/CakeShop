<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro">
    <link href="~/lib/bootstrap-4.4.1-dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/content/site.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
        <a class="navbar-brand" href="#"></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExample04" aria-controls="navbarsExample04" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarsExample04">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a asp-controller="Home" asp-action="Index" class="nav-link">Home</a>
                </li>

                <li class="nav-item">
                    <a asp-controller="Pie" asp-action="List" class="nav-link">Pies</a>
                </li>
                @await Component.InvokeAsync("CategoryMenu")
                <li>
                    <a asp-controller="Contact" asp-action="Index">Contact</a>
                </li>
                @await Component.InvokeAsync("ShoppingCartSummary")

                <partial name="_LoginPartial" />

            </ul>
            <form class="form-inline my-2 my-md-0">
                <input class="form-control" type="text" placeholder="Search">
            </form>
        </div>
    </nav>
    <div class="row">
        <div class="col-md-3">
            <p>
                <img class="img-responsive" alt=" CakeShop" src="~/Images/bethanylogo.png" />
            </p>
        </div>
        <div class="col-md-9">
            @RenderBody()
        </div>
    </div>
    </div>
    @RenderSection("Scripts", required: false)
</body>
<script src="~/lib/jquery/jquery.js"></script>
<script src="~/lib/bootstrap-4.4.1-dist/js/bootstrap.bundle.js"></script>
</html>
